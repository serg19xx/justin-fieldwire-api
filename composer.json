{
    "name": "fieldwire/api",
    "description": "REST API built with FlightPHP",
    "type": "project",
    "require": {
        "php": ">=8.2.0",
        "doctrine/dbal": "^3.6",
        "mikecao/flight": "^2.0",
        "monolog/monolog": "^3.4",
        "phpmailer/phpmailer": "^6.10",
        "ramsey/uuid": "^4.7",
        "sendgrid/sendgrid": "^8.1",
        "twilio/sdk": "^8.7",
        "vlucas/phpdotenv": "^5.5",
        "zircote/swagger-php": "^4.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "analyze": "phpstan analyse src tests",
        "server:start": "./scripts/start-server.sh",
        "server:stop": "./scripts/stop-server.sh",
        "server:restart": "./scripts/restart-server.sh",
        "db:setup": "php scripts/setup-database.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
