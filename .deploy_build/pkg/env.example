# Example Environment Configuration
# Copy this file to .env and fill in your actual values

APP_NAME="FieldWire API"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Logging Configuration sdfgsdfgsd
LOG_LEVEL=debug
LOG_CHANNEL=file
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Email Configuration - SendGrid (Primary)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_email@example.com
SENDGRID_FROM_NAME='Your Name'

# Email Configuration - PHPMailer (Fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=your_email@example.com
SMTP_FROM_NAME='Your Name'

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
